{
  "type": "object",
  "required": ["event_type", "event_time", "payload"],
  "properties": {
    "event_type": {"type": "string", "enum": ["covid_case"]},
    "event_time": {"type": "integer"},
    "trace_id": {"type": "string"},
    "payload": {
      "type": "object",
      "required": ["date", "city", "region", "cases"],
      "properties": {
        "date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
        "city": {"type": "string"},
        "region": {"type": "string"},
        "cases": {"type": "integer"}
      }
    },
    "version": {"type": "string"}
  }
}